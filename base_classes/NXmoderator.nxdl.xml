<definition xmlns="http://www.nexusformat.org"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.nexusformat.org nxdl.xsd"
    name="NXmoderator" 
	type="group" extends="NXobject">
    <doc>This is the description for a general moderator</doc>
    <group type="NXgeometry">
        <doc>"Engineering" position of moderator</doc>
    </group>
    <field name="distance" type="NX_FLOAT">
        <doc>Effective distance as seen by measuring radiation</doc>
    </field>
    <field name="type" type="NX_CHAR">
        <enumeration>
            <item value="H20"/>
            <item value="D20"/>
            <item value="Liquid H2"/>
            <item value="Liquid CH4"/>
            <item value="Liquid D2"/>
            <item value="Solid D2"/>
            <item value="C"/>
            <item value="Solid CH4"/>
            <item value="Solid H2"/>
        </enumeration>
    </field>
    <field name="poison_depth" type="NX_FLOAT" units="cm"/>
    <field name="coupled" type="NX_BOOLEAN">
        <doc>whether the moderator is coupled</doc>
    </field>
    <field name="poison_material" type="NX_CHAR">
        <enumeration>
            <item value="Gd"/>
            <item value="Cd"/>
        </enumeration>
    </field>
    <field name="temperature" type="NX_FLOAT" units="Kelvin">
        <doc>average/nominal moderator temperature</doc>
    </field>
    <group type="NXlog" name="temperature_log">
        <doc>log file of moderator temperature</doc>
    </group>
    <group type="NXdata" name="pulse_shape">
        <doc>moderator pulse shape</doc>
    </group>
</definition>

