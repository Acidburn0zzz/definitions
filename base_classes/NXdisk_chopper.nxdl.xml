<definition xmlns="http://www.nexusformat.org"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.nexusformat.org nxdl.xsd"
    name="NXdisk_chopper" 
	type="group" extends="NXobject">

	<field name="type" type="NX_CHAR">
		<enumeration>
			<item value="Chopper type single" />
			<item value="contra_rotating_pair" />
			<item value="synchro_pair" />
		</enumeration>
	</field>
	<field name="rotation_speed" type="NX_FLOAT" units="rpm|hertz"><doc>chopper rotation speed</doc></field>
	<field name="slits" type="NX_INT"><doc>Number of slits</doc></field>
	<field name="slit_angle" type="NX_FLOAT" units="degree"><doc>angular opening</doc></field>
	<field name="pair_separation" type="NX_FLOAT" units="cm"><doc>disc spacing in direction of beam</doc></field>
	<field name="radius" type="NX_FLOAT" units="cm"><doc>radius to centre of slit</doc></field>
	<field name="slit_height" type="NX_FLOAT" units="cm"><doc>total slit height</doc></field>
	<field name="phase" type="NX_FLOAT" units="degree"><doc>chopper phase angle</doc></field>
	<field name="ratio" type="NX_INT"><doc>pulse reduction factor of this chopper in relation to other choppers/fastest pulse in the instrument</doc></field>
	<field name="distance" type="NX_FLOAT" units="cm"><doc>Effective distance to the origin</doc></field>
	<field name="wavelength_range" type="NX_FLOAT" dims="[2]" units="nm"><doc>low and high values of wavelength range transmitted</doc></field>
	<group type="NXgeometry" />
</definition>
