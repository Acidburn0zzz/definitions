<definition xmlns="http://www.nexusformat.org"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.nexusformat.org nxdl.xsd"
    name="NXcollimator" type="group" extends="NXobject">
    <doc>Template of a beamline collimator.</doc>
    <group type="NXgeometry">
        <doc>position, shape and size</doc>
    </group>
    <field name="type" type="NX_CHAR">
        <enumeration>
            <item value="Soller"/>
            <item value="radial"/>
            <item value="oscillating"/>
            <item value="honeycomb"></item>
        </enumeration>
    </field>
    <field name="soller_angle" type="NX_FLOAT" units="minutes">
        <doc>Angular divergence of Soller collimator</doc>
    </field>
    <field name="divergence_x" type="NX_FLOAT">
        <doc>divergence of collimator in local x direction</doc>
    </field>
    <field name="divergence_y" type="NX_FLOAT">
        <doc>divergence of collimator in local y direction</doc>
    </field>
    <field name="frequency" type="NX_FLOAT">
        <doc>Frequency of oscillating collimator</doc>
    </field>
    <group type="NXlog" name="frequency">
        <doc>Log of frequency</doc>
    </group>
    <field name="blade_thickness" type="NX_FLOAT">
    </field>
    <field name="blade_spacing" type="NX_FLOAT">
    </field>
    <field name="absorbing_material" type="NX_CHAR">
    </field>
    <field name="transmitting_material" type="NX_CHAR">
    </field>
</definition>