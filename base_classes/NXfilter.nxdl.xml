<definition xmlns="http://www.nexusformat.org"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.nexusformat.org nxdl.xsd"
    name="NXfilter" 
	type="group" extends="NXobject">
	<doc>Template for specifying the state of band pass filters</doc>
	<group type="NXgeometry">
		<doc>Geometry of the filter</doc>
	</group>
	<field name="description" type="NX_CHAR">
		<enumeration>
			<item value="Beryllium" />
			<item value="Pyrolytic Graphite" />
			<item value="Graphite" />
			<item value="Sapphire" />
			<item value="Silicon" />
			<item value="Supermirror" />
		</enumeration>
	</field>
	<field name="status" type="NX_CHAR">
		<enumeration>
			<item value="in" />
			<item value="out" />
		</enumeration>
	</field>
	<group name="transmission" type="NXdata">
		<doc>Wavelength transmission profile of filter</doc>
	</group>
	<field name="temperature" type="NX_FLOAT" units="NX_TEMPERATURE">
		<doc>average/nominal filter temperature</doc>
	</field>
	<group name="temperature_log" type="NXlog">
		<doc>Linked temperature_log for the filter</doc>
	</group>
	<group name="sensor_type" type="NXsensor">
		<doc>Sensor(s)used to monitor the filter temperature</doc>
	</group>
	<field name="unit_cell" type="NX_FLOAT">
		<doc>Unit cell parameters for single crystal filter(lengths and angles)</doc>
		<dimensions>n_comp,6</dimensions>
	</field>
	<field name="unit_cell_volume" type="NX_FLOAT" units="NX_ATOMIC_VOLUME">
		<doc>Unit cell</doc>
		<dimensions>n_comp</dimensions>
		<attribute name="rank" type="NX_INT">
			<enumeration>
				<item value="1"/>
			</enumeration>
			
		</attribute>
	</field>
	<field name="orientation_matrix" type="NX_FLOAT">
		<doc>Orientation matrix of single crystal filter</doc>
		<dimensions>n_comp,3,3</dimensions>
	</field>
	<field name="m_value" type="NX_FLOAT">
		<doc>m value of supermirror filter</doc>
	</field>
	<field name="substrate_material" type="NX_CHAR">
		<doc>substrate material of supermirror filter</doc>
	</field>
	<field name="substrate_thickness" type="NX_FLOAT">
		<doc>substrate thickness of supermirror filter</doc>
	</field>
	<field name="coating_material" type="NX_CHAR">
		<doc>coating material of supermirror filter</doc>
	</field>
	<field name="substrate_roughness" type="NX_FLOAT">
		<doc>substrate roughness of supermirror filter</doc>
	</field>
	<field name="coating_roughness" type="NX_FLOAT">
		<doc>coating roughness of supermirror filter</doc>
		<dimensions>nsurf</dimensions>
	</field>
</definition>

