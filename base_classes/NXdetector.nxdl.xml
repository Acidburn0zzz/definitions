<definition xmlns="http://definition.nexusformat.org/nxdl/3.1" category="base"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://definition.nexusformat.org/nxdl/3.1 ../nxdl.xsd"
	name="NXdetector" 
	version="1.0"
    svnid="$Id$"
	type="group" extends="NXobject">

	<!-- TODO
			improve documentation throughout
		-->

	<doc>
		<para xmlns="http://docbook.org/ns/docbook">
	Template of a detector, detector bank, or multidetector. 
	The indices require explanation:
		<variablelist>
			<varlistentry>
				<term>np</term>
				<listitem>
					<para>the number of points in a scan. 
						This dimension is only present in scanning measurements.
					</para>
				</listitem>
			</varlistentry>
			<varlistentry>
				<term>tof</term>
				<listitem>
					<para>the number of points in a scan. 
						This dimension is only present in scanning measurements.
					</para>
				</listitem>
			</varlistentry>
			<varlistentry>
				<term>i</term>
				<listitem>
					<para>the number of pixels in the slowest varying direction. 
						This is only missing in the point detector.
					</para>
				</listitem>
			</varlistentry>
			<varlistentry>
				<term>j</term>
				<listitem>
					<para>the number of pixels in the fastest varying direction. 
						This exists only in "area" detectors.
					</para>
				</listitem>
			</varlistentry>
		</variablelist>
		</para>
	</doc>
	<field name="time_of_flight" type="NX_FLOAT" units="NX_TIME_OF_FLIGHT">
		<doc>Total time of flight</doc>
		<dimensions size="1"><dim index="1" value="tof+1"><!--tof+1--></dim></dimensions>
		<attribute name="axis" type="NX_INT">
			<enumeration>
				<item value="3"/>
			</enumeration>
		</attribute>
	    <attribute name="primary" type="NX_INT">
	    	<enumeration>
	    		<item value="1"/>
	    	</enumeration>
	    </attribute>
		<attribute name="long_name">
			<doc>Axis label</doc>
		</attribute>
		<attribute name="link">
			<doc>absolute path to location in NXdetector</doc>
		</attribute>
	</field>
	<field name="raw_time_of_flight" type="NX_INT" units="NX_PULSES">
		<doc>In DAQ clock pulses</doc>
		<dimensions size="1"><dim index="1" value="tof+1"><!--tof+1--></dim></dimensions>
		<attribute name="frequency" type="NX_FLOAT">
			<doc>Clock frequency in Hz</doc>
		</attribute>
	</field>
	<field name="detector_number" type="NX_INT">
		<doc>Identifier for detector</doc>
		<dimensions size="2"><!--i?,j?-->
			<dim index="1" value="i"><!--i?--></dim>
			<dim index="2" value="j"><!--j?--></dim>
		</dimensions>
	</field>
	<field name="data" type="NX_NUMBER" units="NX_ANY">
		<doc>Data values</doc>
		<dimensions size="4"><!--np?,i?,j?,tof?-->
			<dim index="1" value="np"/>
			<dim index="2" value="i"/>
			<dim index="3" value="j"/>
			<dim index="4" value="tof"/>
		</dimensions>
		<attribute name="signal" type="NX_INT">
			<enumeration>
				<item value="1"/>
			</enumeration>
		</attribute>
		<attribute name="axes">
			<doc>[number of scan points,x_offset?,y_offset?,time_of_flight?]</doc>
		</attribute>
		<attribute name="long_name">
			<doc>Title of measurement</doc>
		</attribute>
		<attribute name="check_sum" type="NX_INT">
			<doc>Integral of data as check of data integrity</doc>
		</attribute>
		<attribute name="link">
			<doc>absolute path to location in NXdetector</doc>
		</attribute>
	</field>
	<field name="data_error" type="NX_NUMBER" units="NX_ANY">
		<doc>Data values</doc>
		<dimensions size="4"><!--np?,i?,j?,tof?-->
			<dim index="1" value="np"/>
			<dim index="2" value="i"/>
			<dim index="3" value="j"/>
			<dim index="4" value="tof"/>
		</dimensions>
		<attribute name="units"/>
		<attribute name="link">
			<doc>absolute path to location in NXdetector</doc>
		</attribute>
	</field>
	<field name="x_pixel_offset" type="NX_FLOAT" units="NX_LENGTH">
		<doc>offset from the detector center in x-direction</doc>
		<dimensions size="1"><dim index="1" value="i"><!--i?--></dim></dimensions>
        <attribute name="axis" type="NX_INT">
        	<enumeration>
        		<item value="1"/>
        	</enumeration>
        </attribute>
		<attribute name="primary" type="NX_INT">
			<enumeration>
				<item value="1"/>
			</enumeration>
		</attribute>
		<attribute name="long_name">
			<doc>Axis label</doc>
		</attribute>
		<attribute name="link">
			<doc>absolute path to location in NXdetector</doc>
		</attribute>
	</field>
	<field name="y_pixel_offset" type="NX_FLOAT" units="NX_LENGTH">
		<doc>offset from the detector center in the y-direction</doc>
		<dimensions size="1"><dim index="1" value="j"/></dimensions>
		<attribute name="axis" type="NX_INT">
			<enumeration>
				<item value="2"/>
			</enumeration>
		</attribute>
        <attribute name="primary" type="NX_INT">
        	<enumeration>
        		<item value="1"/>
        	</enumeration>	
        </attribute>
		<attribute name="long_name">
			<doc>Axis label</doc>
		</attribute>
	</field>
	<field name="distance" type="NX_FLOAT" units="NX_LENGTH">
		<doc><!-- TODO -->need some documentation here</doc>
		<dimensions size="3"><!--np?,i?,j?-->
			<dim index="1" value="np"/>
			<dim index="2" value="i"/>
			<dim index="3" value="j"/>
		</dimensions>
	</field>
	<field name="polar_angle" type="NX_FLOAT" units="NX_ANGLE">
		<doc><!-- TODO -->need some documentation here</doc>
		<dimensions size="3"><!--np?,i?,j?-->
			<dim index="1" value="np"/>
			<dim index="2" value="i"/>
			<dim index="3" value="j"/>
		</dimensions>
	</field>
	<field name="azimuthal_angle" type="NX_FLOAT" units="NX_ANGLE">
		<doc><!-- TODO -->need some documentation here</doc>
		<dimensions size="3"><!--np?,i?,j?-->
			<dim index="1" value="np"/>
			<dim index="2" value="i"/>
			<dim index="3" value="j"/>
		</dimensions>
	</field>
	<field name="description">
		<doc>name/manufacturer/model/etc. information</doc>
	</field>
	<field name="local_name">
		<doc>Local name for the detector</doc>
	</field>
	<group type="NXgeometry">
		<doc>Position and orientation of detector element</doc>
	</group>
	<field name="solid_angle" type="NX_FLOAT" units="NX_SOLID_ANGLE">
		<doc>Solid angle subtended by the detector at the sample</doc>
		<dimensions size="2"><!--i?,j?-->
			<dim index="1" value="i"/>
			<dim index="2" value="j"/>
		</dimensions>
	</field>
	<field name="x_pixel_size" type="NX_FLOAT" units="NX_LENGTH">
		<doc>Size of each detector pixel. If it is scalar all pixels are the
			same size</doc>
		<dimensions size="2"><!--i?,j?-->
			<dim index="1" value="i"/>
			<dim index="2" value="j"/>
		</dimensions>
	</field>
	<field name="y_pixel_size" type="NX_FLOAT" units="NX_LENGTH">
		<doc>Size of each detector pixel. If it is scalar all pixels are the
			same size</doc>
		<dimensions size="2"><!--i?,j?-->
			<dim index="1" value="i"/>
			<dim index="2" value="j"/>
		</dimensions>
	</field>
	<field name="dead_time" type="NX_FLOAT" units="NX_TIME">
		<doc>Detector dead time</doc>
		<dimensions size="3"><!--np?,i?,j?-->
			<dim index="1" value="np"/>
			<dim index="2" value="i"/>
			<dim index="3" value="j"/>
		</dimensions>
	</field>
	<field name="gas_pressure" type="NX_FLOAT" units="NX_PRESSURE">
		<doc>Detector gas pressure</doc>
		<dimensions size="2"><!--i?,j?-->
			<dim index="1" value="i"/>
			<dim index="2" value="j"/>
		</dimensions>
	</field>
	<field name="detection_gas_path" type="NX_FLOAT" units="NX_LENGTH">
		<doc>maximum drift space dimension</doc>
	</field>
	<field name="crate" type="NX_INT">
		<doc>Crate number of detector</doc>
		<dimensions size="2"><!--i?,j?-->
			<dim index="1" value="i"/>
			<dim index="2" value="j"/>
		</dimensions>
		<attribute name="local_name">
			<doc>Equivalent local term</doc>
		</attribute>
	</field>
	<field name="slot" type="NX_INT">
		<doc>Slot number of detector</doc>
		<dimensions size="2"><!--i?,j?-->
			<dim index="1" value="i"/>
			<dim index="2" value="j"/>
		</dimensions>
		<attribute name="local_name">
			<doc>Equivalent local term</doc>
		</attribute>
	</field>
	<field name="input" type="NX_INT">
		<doc>Input number of detector</doc>
		<dimensions size="2"><!--i?,j?-->
			<dim index="1" value="i"/>
			<dim index="2" value="j"/>
		</dimensions>
		<attribute name="local_name">
			<doc>Equivalent local term</doc>
		</attribute>
	</field>
	<field name="type">
		<doc>Description of type such as He3 gas cylinder, He3 PSD,
		scintillator, fission chamber, proportion counter, 
		ion chamber, ccd, pixel, image plate, cmos, ...</doc>
	</field>
	<group type="NXdata" name="efficiency">
		<doc>Efficiency of detector with respect to e.g. wavelength</doc>
		<field name="efficiency" type="NX_FLOAT" units="NX_DIMENSIONLESS">
			<doc>efficiency of the detector</doc>
			<dimensions size="3"><!--i?,j?,k?-->
				<dim index="1" value="i"/>
				<dim index="2" value="j"/>
				<dim index="3" value="k"/>
			</dimensions>
		</field>
		<field name="wavelength" type="NX_FLOAT" units="NX_WAVELENGTH">
			<doc><!-- TODO -->need some documentation here</doc>
			<dimensions size="3"><!--i?,j?,k?-->
				<dim index="1" value="i"/>
				<dim index="2" value="j"/>
				<dim index="3" value="k"/>
			</dimensions>
		</field>
	</group>
	<field name="calibration_date" type="NX_DATE_TIME">
		<doc>date of last calibration (geometry and/or efficiency)
		measurements</doc>
	</field>
	<group type="NXnote" name="calibration_method">
		<doc>summary of conversion of array data to pixels (e.g. polynomial
		approximations) and location of details of the calibrations</doc>
	</group>
	<field name="layout">
		<doc>How the detector is represented</doc>
		<enumeration>
			<item value="point"/>
			<item value="linear"/>
			<item value="area"/>
		</enumeration>
	</field>
	<field name="count_time" type="NX_NUMBER" units="NX_TIME">
		<doc>Elapsed actual counting time</doc>
		<dimensions size="1"><!-- np? --><dim index="1" value="np"/></dimensions>
	</field>
	<group name="data_file" type="NXnote" />
	<group type="NXcharacterization" />
	<field name="sequence_number">
		<doc>In order 
			to properly sort the order of the images taken in (for example) 
			a tomography experiment, a sequence number is stored with each image.
		</doc>
		<dimensions size="1">
			<dim index="1" value="nBrightFrames" />
		</dimensions>
	</field>

</definition>
