<definition xmlns="http://www.nexusformat.org"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.nexusformat.org nxdl.xsd"
    name="NXguide" 
	type="group" extends="NXobject">
    <doc>Template of NXguide</doc>
    <group type="NXgeometry"/>
    <field name="description" type="NX_CHAR"/>
    <field name="incident_angle" type="NX_FLOAT"/>
    <group type="NXdata" name="reflectivity">
        <doc>Reflectivity as function of wavelength [nsurf,i]</doc>
    </group>
    <field name="bend_angle_x" type="NX_FLOAT"/>
    <field name="bend_angle_y" type="NX_FLOAT"/>
    <field name="interior_atmosphere" type="NX_CHAR">
        <enumeration>
            <item value="vacuum"/>
            <item value="helium"/>
            <item value="argon"/>
        </enumeration>
    </field>
    <field name="external_material" type="NX_CHAR">
        <doc>external material outside substrate</doc>
    </field>
    <field name="m_value" type="NX_FLOAT">
        <dimensions>nsurf</dimensions>
    </field>
    <field name="substrate_material" type="NX_FLOAT">
        <dimensions>nsurf</dimensions>
    </field>
    <field name="substrate_thickness" type="NX_FLOAT">
        <dimensions>nsurf</dimensions>
    </field>
    <field name="coating_material" type="NX_FLOAT">
        <dimensions>nsurf</dimensions>
    </field>
    <field name="substrate_roughness" type="NX_FLOAT">
        <dimensions>nsurf</dimensions>
    </field>
    <field name="coating_roughness" type="NX_FLOAT">
        <dimensions>nsurf</dimensions>
    </field>
    <field name="number_sections" type="NX_INT">
        <doc>number of substrate sections</doc>
    </field>
</definition>

