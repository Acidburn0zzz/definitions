<?xml version="1.0" encoding="UTF-8"?>
<definition xmlns="http://www.nexusformat.org"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.nexusformat.org nxdl.xsd"
    name="NXattenuator" type="group" extends="NXobject">
    <doc>Template of a beamline attenuator.</doc>
    <field name="distance" type="NX_FLOAT" units="m">
        <doc>Distance from sample</doc>
    </field>
    <field name="type" type="NX_CHAR">
        <doc>Type of attenuator, e.g. polythene</doc>
    </field>
    <field name="thickness" type="NX_FLOAT" units="cm">
        <doc>Thickness of attenuator along beam direction</doc>
    </field>
    <field name="scattering_cross_section" type="NX_FLOAT" units="barns">
        <doc>Scattering cross section (coherent+incoherent)</doc>
    </field>
    <field name="absorption_cross_section" type="NX_FLOAT" units="barns">
        <doc>Absorption cross section</doc>
    </field>
    <field name="attenuator_transmission" type="NX_FLOAT">
        <doc>The nominal amount of the beam that gets through (transmitted intensity)/(incident
            intensity)</doc>
    </field>
</definition>