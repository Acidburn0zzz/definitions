<definition xmlns="http://www.nexusformat.org"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.nexusformat.org nxdl.xsd"
    name="NXmirror" 
	type="group" extends="NXobject">
    <doc>Template of a beamline supermirror.</doc>
    <group type="NXgeometry"/>
    <field name="description"/>
    <field name="incident_angle" type="NX_FLOAT"/>
    <group type="NXdata" name="reflectivity">
        <doc>Reflectivity as function of wavelength</doc>
    </group>
    <field name="bend_angle_x" type="NX_FLOAT"/>
    <field name="bend_angle_y" type="NX_FLOAT"/>
    <field name="interior_atmosphere">
        <enumeration>
            <item value="vacuum"/>
            <item value="helium"/>
            <item value="argon"/>
        </enumeration>
    </field>
    <field name="external_material">
        <doc>external material outside substrate</doc>
    </field>
    <field name="m_value" type="NX_FLOAT"/>
    <field name="substrate_material"/>
    <field name="substrate_thickness" type="NX_FLOAT"/>
    <field name="coating_material"/>
    <field name="substrate_roughness" type="NX_FLOAT"/>
    <field name="coating_roughness" type="NX_FLOAT"/>
</definition>

