<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
	targetNamespace="http://definition.nexusformat.org/schema/3.0" 
	xmlns:nx="http://definition.nexusformat.org/schema/3.0"
	elementFormDefault="qualified">

   <xs:include schemaLocation="NeXus.xsd" />
	<xs:complexType name="NXattenuatorType">
	  <xs:annotation><xs:documentation>Template of a beamline attenuator</xs:documentation></xs:annotation>
	  <xs:complexContent>
	  <xs:extension base="nx:componentType">
	   <xs:sequence maxOccurs="unbounded">
	         <xs:element type="nx:charDataType" name="type"  minOccurs="0">
	           <xs:annotation><xs:documentation>Type of attenuator, e.g. polythene</xs:documentation></xs:annotation>
		 </xs:element>
		 <xs:element type="nx:floatDataType" name="thickness" minOccurs="0">
		   <xs:annotation><xs:documentation>Thickness of attenuator along beam direction</xs:documentation></xs:annotation>
		 </xs:element>
	     <xs:element type="nx:floatDataType" name="scattering_cross_section" minOccurs="0">
	       <xs:annotation><xs:documentation>Scattering cross section (coherent+incoherent)</xs:documentation></xs:annotation>
	     </xs:element>
	     <xs:element type="nx:floatDataType" name="absorption_cross_section" minOccurs="0">
	       <xs:annotation><xs:documentation>Absorption cross section</xs:documentation></xs:annotation>
	     </xs:element>
	     <xs:element type="nx:floatDataType" name="attenuator_transmission " minOccurs="0">
	       <xs:annotation><xs:documentation>The nominal amount of the beam that gets through (transmitted intensity)/(incident intensity)</xs:documentation></xs:annotation>
	     </xs:element>
	  </xs:sequence>
	 </xs:extension>
	</xs:complexContent>
	</xs:complexType>
</xs:schema>
