	targetNamespace="http://definition.nexusformat.org/schema/3.0" 
	xmlns:nx="http://definition.nexusformat.org/schema/3.0"
	elementFormDefault="qualified">

   <xs:include schemaLocation="NXchopper.xsd" />

   <xs:complexType name="NXdisk_chopperType">
	<xs:complexContent>
	 <xs:extension base="nx:NXchopperType">
	   <xs:sequence maxOccurs="unbounded">
		 <xs:element type="nx:int32DataType" name="slits" minOccurs="0"/>
		 <xs:element type="nx:float32DataType" name="slit_angle" minOccurs="0"/>
		 <xs:element type="nx:float32DataType" name="pair_separation" minOccurs="0"/>
		 <xs:element type="nx:float32DataType" name="slit_height" minOccurs="0"/>
		 <xs:element type="nx:float32DataType" name="phase" minOccurs="0"/>
	   </xs:sequence>
	 </xs:extension>
	</xs:complexContent>
   </xs:complexType>

