<?xml-stylesheet type="text/xsl" href="nexus-documentation.xsl" ?>

<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
	targetNamespace="http://definition.nexusformat.org/schema/3.0" 
	xmlns:nx="http://definition.nexusformat.org/schema/3.0"
	elementFormDefault="qualified">

   <xs:include schemaLocation="NXchopper.xsd" />

   <xs:complexType name="NXfermi_chopperType">
     <xs:annotation><xs:documentation> This is the description for a  Fermi chopper, possibly with curved slits.</xs:documentation></xs:annotation>
     <xs:complexContent>
	 <xs:extension base="nx:NXchopperType">
	   <xs:sequence maxOccurs="unbounded">
		 <xs:element type="nx:intDataType" name="num" minOccurs="0">
		   <xs:annotation><xs:documentation> number of slits</xs:documentation></xs:annotation>
		   
		 </xs:element>
		 <xs:element type="nx:floatLengthDataType" name="r_slit" minOccurs="0">
		   <xs:annotation><xs:documentation> radius of curvature of slits</xs:documentation></xs:annotation>
		   
		 </xs:element>
		 <xs:element type="nx:floatWavelengthDataType" name="wavelength" minOccurs="0">
		   <xs:annotation><xs:documentation> Wavelength transmitted by chopper</xs:documentation></xs:annotation>   
		 </xs:element>
	   </xs:sequence>
	 </xs:extension>
	</xs:complexContent>
   </xs:complexType>

</xs:schema>