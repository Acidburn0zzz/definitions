<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
	targetNamespace="http://definition.nexusformat.org/schema/3.0" 
	xmlns:nx="http://definition.nexusformat.org/schema/3.0"
	elementFormDefault="qualified">

   <xs:include schemaLocation="NeXus.xsd" />

	<xs:complexType name="NXapertureType">
	  <xs:annotation><xs:documentation>Template of a beamline apperture</xs:documentation></xs:annotation>
	<xs:complexContent>
	  <xs:extension base="nx:componentType">
	   <xs:sequence maxOccurs="unbounded">
		 <xs:element type="nx:charDataType" name="material" minOccurs="0">
		   <xs:annotation><xs:documentation>Absorbing material of the aperture</xs:documentation></xs:annotation>
		 </xs:element>
	         <xs:element type="nx:charDataType" name="description" minOccurs="0">
	           <xs:annotation><xs:documentation>Description of aperture</xs:documentation></xs:annotation>
	         </xs:element>
	   </xs:sequence>
	 </xs:extension>
	</xs:complexContent>
	</xs:complexType>
</xs:schema>
