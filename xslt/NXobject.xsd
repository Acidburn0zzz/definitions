<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
	targetNamespace="http://definition.nexusformat.org/schema/3.0"
	xmlns:nx="http://definition.nexusformat.org/schema/3.0"
	elementFormDefault="qualified">

	<xs:simpleType name="type_NX_CHAR">
		<xs:annotation>
			<xs:documentation>any string representation</xs:documentation>
		</xs:annotation>
		<xs:restriction base="xs:string" />
	</xs:simpleType>

	<xs:simpleType name="type_NX_FLOAT">
		<xs:annotation>
			<xs:documentation>any representation of a floating point number</xs:documentation>
		</xs:annotation>
		<xs:restriction base="xs:float" />
	</xs:simpleType>

	<xs:simpleType name="type_NX_INT">
		<xs:annotation>
			<xs:documentation>any representation of an integer number</xs:documentation>
		</xs:annotation>
		<xs:restriction base="xs:integer" />
	</xs:simpleType>

	<xs:simpleType name="type_NX_UINT">
		<xs:annotation>
			<xs:documentation>any representation of an unsigned integer number</xs:documentation>
		</xs:annotation>
		<xs:restriction base="xs:nonNegativeInteger" />
	</xs:simpleType>

	<xs:simpleType name="type_NX_NUMBER">
		<xs:annotation>
			<xs:documentation>any valid NeXus number representation</xs:documentation>
		</xs:annotation>
		<xs:union memberTypes="nx:type_NX_INT nx:type_NX_UINT nx:type_NX_FLOAT"></xs:union>
	</xs:simpleType>

	<xs:simpleType name="type_NX_DATE_TIME">
		<xs:annotation>
			<xs:documentation>alias for the ISO8601 date/time stamp</xs:documentation>
		</xs:annotation>
		<xs:restriction base="nx:type_ISO8601" />
	</xs:simpleType>

	<xs:simpleType name="type_ISO8601">
		<xs:annotation>
			<xs:documentation>ISO8601 date/time stamp</xs:documentation>
		</xs:annotation>
		<xs:restriction base="xs:dateTime" />
	</xs:simpleType>

	<xs:simpleType name="type_NX_BOOLEAN">
		<xs:annotation>
			<xs:documentation>true/false value</xs:documentation>
		</xs:annotation>
		<xs:restriction base="xs:boolean" />
	</xs:simpleType>

	<xs:simpleType name="type_NX_BINARY">
		<xs:annotation>
			<xs:documentation>
				Binary data - if text, line terminator is [CR][LF]
			</xs:documentation>
		</xs:annotation>
		<!-- Is this the way to describe pure binary? -->
		<xs:restriction base="xs:byte" />
	</xs:simpleType>

	<xs:simpleType name="type_NAPI">
		<xs:annotation>
			<xs:documentation>any valid NeXus type</xs:documentation>
		</xs:annotation>
		<xs:union memberTypes="nx:type_NX_CHAR 
			nx:type_NX_FLOAT nx:type_NX_INT nx:type_NX_UINT nx:type_NX_NUMBER 
			nx:type_NX_DATE_TIME nx:type_ISO8601 nx:type_NX_BOOLEAN nx:type_NX_BINARY" />
	</xs:simpleType>

</xs:schema>
