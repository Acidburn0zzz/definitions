<definition name="NXmonopd" extends="NXobject" type="group"
    xmlns="http://definition.nexusformat.org/nxdl/3.1"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://definition.nexusformat.org/nxdl/3.1 ../nxdl.xsd "
    svnid="$Id$">
    <doc> Monochromatic Neutron and X-Ray Powder Diffraction. Instrument definition for a powder
        diffractometer at a monochromatic neutron or X-ray beam. This is both suited for a powder
        diffractometer with a single detector or a powder diffractometer with a position sensitive
        detector. </doc>
    <group type="NXentry">
        <field name="title"/>
        <field name="start_time" type="NX_DATE_TIME"/>
        <field name="end_time" type="NX_DATE_TIME"/>
        <field name="definition" type="NX_CHAR">
            <doc>
                Identifies the NXDL that describes the structure of this data file
                <!-- possibly a single enumeration of the URL for the XSD derived from this NXDL? -->
            </doc>
            <attribute name="URL" type="NX_CHAR">
                <doc>
                    Uniform Resource Locator for the base_class, application, or contributed 
                    NXDL that describes the structure of this data file
                </doc>
            </attribute>
        </field>
        <group type="NXinstrument"> <!-- overrides NXdetector (see below) -->
            <group type="NXsource"/> <!-- use the standard definition of NXsource -->
            <group type="NXcrystal"/>  <!-- use the standard definition of NXcrystal -->
            <group type="NXdetector">
                <!-- override standard definition of NXcrystal for the dimension quantity "ndet" -->
                <field name="polar_angle" type="NX_FLOAT">
                    <doc>where ndet = number of detectors</doc>
                    <dimensions size="1">
                        <dim index="1" value="ndet"/>
                    </dimensions>
                </field>
                <field name="data" type="NX_INT">
                    <dimensions size="1">
                        <dim index="1" value="ndet"/>
                    </dimensions>
                </field>
                <field name="efficiency" type="NX_FLOAT">
                    <doc>efficiency of each detecor</doc>
                    <dimensions size="1">
                        <dim index="1" value="ndet"/>
                    </dimensions>
                </field>
            </group>
        </group>
        <group type="NXsample"/> <!-- use the standard definition of NXsample -->
        <group type="NXmonitor"/> <!-- use the standard definition of NXmonitor -->
        <group type="NXdata"> <!-- overrides default spec (see below) -->
            <field name="polar_angle" type="NX_FLOAT">
                <doc>Link to polar angle in /NXentry/NXinstrument/NXdetector, ndp = number of detectors or data points</doc>
                <!-- but /NXentry/NXinstrument/NXdetector uses "ndet"! -->
                <dimensions size="1">
                    <dim index="1" value="ndp"/>
                </dimensions>
            </field>
            <field name="data" type="NX_INT">
                <doc>Link to data in /NXentry/NXinstrument/NXdetector</doc>
                <dimensions size="1">
                    <dim index="1" value="ndp"/>
                </dimensions>
            </field>
        </group>
    </group>
</definition>
