<nx:definition extends="" name="" type="group" xmlns:nx="http://definition.nexusformat.org/schema/3.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://definition.nexusformat.org/schema/3.1 ../nxdl.xsd ">
	<nx:group type="NXentry">
		<nx:field name="title" type="NX_CHAR"></nx:field>
		<nx:field name="start_time" type="NX_DATE_TIME"></nx:field>
		<nx:field name="end_time" type="NX_DATE_TIME"></nx:field>
		<nx:group type="NXinstrument">
			<nx:group type="NXsource">
				<nx:field name="type" type="NX_CHAR"></nx:field>
				<nx:field name="name" type="NX_CHAR"></nx:field>
				<nx:field name="probe" type="NX_CHAR">
					<nx:enumeration>
						<nx:item value="neutron"></nx:item>
						<nx:item value="x-ray"></nx:item>
						<nx:item value="electron"></nx:item>
					</nx:enumeration></nx:field></nx:group>
			<nx:group type="NXcrystal">
    <nx:field name="wavelength" type="NX_FLOAT" units="NX_LENGTH">
        <doc>Optimum diffracted wavelength</doc>
        <dimensions>i</dimensions>
    </nx:field>

                        </nx:group>
			<nx:group type="NXdetector">
				<nx:field name="polar_angle" type="NX_FLOAT">
					<nx:dimensions>number of detectors</nx:dimensions></nx:field>
				<nx:field name="data" type="NX_INT32">
					<nx:dimensions>number of detectors</nx:dimensions></nx:field>
				<nx:field name="efficiency" type="NX_FLOAT">
					<nx:doc>efficiency of each detecor</nx:doc><nx:dimensions>number of detectors</nx:dimensions></nx:field>
				</nx:group></nx:group></nx:group>
	<nx:group type="NXsample">
	<nx:field name="name">
		<doc>Descriptive name of sample</doc>
	</nx:field>
	<nx:field name="rotation_angle" type="NX_FLOAT" units="NX_ANGLE">
		<doc>
			Optional rotation angle for the case when the powder diagram has 
			been obtained through an omega-2theta scan like from a traditional 
			single detector powder diffractometer
		</doc>
	</nx:field>
        </nx:group>
	<nx:group type="NXmonitor">
    <nx:field name="mode">
        <enumeration>
            <item value="monitor"/>
            <item value="timer"/>
        </enumeration>
    </nx:field>
    <nx:field name="preset" type="NX_FLOAT">
        <doc>preset value for time or monitor</doc>
    </nx:field>
    <nx:field name="integral" type="NX_FLOAT" units="NX_ANY">
        <doc>Total integral monitor counts</doc>
    </nx:field>
        </nx:group>
	<nx:group type=" NXdata">
				<nx:field name="polar_angle" type="NX_FLOAT">
					<nx:doc>Link to polar angle in /NXentry/NXinstrument/NXdetector</nx:doc>
					<nx:dimensions>number of detectors or data points</nx:dimensions></nx:field>
				<nx:field name="data" type="NX_INT">
					<nx:doc>Link to data in /NXentry/NXinstrument/NXdetector</nx:doc>
					<nx:dimensions>number of detectors or data points</nx:dimensions></nx:field>
</nx:group>
</nx:definition>
