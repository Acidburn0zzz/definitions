	<xs:redefine schemaLocation="../nxdl.xsd">
		<xs:attributeGroup name="groupAttributesCategorySpecific">
			<!-- per http://trac.nexusformat.org/definitions/ticket/266 -->
			<xs:annotation>
				<xs:documentation>
					Specifies NXDL ``group`` attributes that are specific for application definitions.
				</xs:documentation>
			</xs:annotation>
			<xs:attribute name="minOccurs" use="optional" default="1" type="xs:nonNegativeInteger">
				<xs:annotation>
					<xs:documentation>
						Minimum number of times this ``group`` is allowed to be present within its
						parent group.  Note each ``group`` must have a ``name`` attribute
						that is unique among all ``group`` and ``field``
						declarations within a common parent group.
					</xs:documentation>
				</xs:annotation>
			</xs:attribute>
		</xs:attributeGroup>
		<xs:attributeGroup name="fieldAttributesCategorySpecific">
			<!-- per http://trac.nexusformat.org/definitions/ticket/266 -->
			<xs:annotation>
				<xs:documentation>
					Specifies NXDL ``field`` attributes that are specific for application definitions.
				</xs:documentation>
			</xs:annotation>
			<xs:attribute name="minOccurs" use="optional" default="1" type="xs:nonNegativeInteger">
				<xs:annotation>
					<xs:documentation>
						Defines the minimum number of times this ``field`` element may be used.  
						Its value is confined to one or greater. 
						Must be less than or equal to the value for the "maxOccurs" attribute.
						<!-- ??? A value of "unbounded" is allowed. -->
					</xs:documentation>
				</xs:annotation>
			</xs:attribute>
		</xs:attributeGroup>
	</xs:redefine>
	
