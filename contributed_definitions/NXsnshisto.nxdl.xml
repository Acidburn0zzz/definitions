<?xml version="1.0" encoding="UTF-8"?>
<!--
  # NXsnshisto: candidate NeXus definition for histogram data from Spallation Neutron Source (SNS) at ORNL.
  
  ########### SVN repository information ###################
  # $Date$
  # $Author$
  # $Revision$
  # $HeadURL$
  # $Id$
  ########### SVN repository information ###################
-->
<definition type="group" name="NXsnshisto" category="contributed" extends="NXobject"
    xmlns="http://definition.nexusformat.org/nxdl/3.1"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://definition.nexusformat.org/nxdl/3.1 ../nxdl.xsd"
    version="1.0"
    svnid="$Id$">
  <doc>This is a definition for histogram data from Spallation Neutron Source (SNS) at ORNL.</doc>
  <group type="NXentry" minOccurs="1">
      <group type="NXgroup" name="DASlogs">
        <doc>
          Details of all logs, both from cvinfo file and from HistoTool (frequency and proton_charge).
        </doc>
        <group type="NXlog" minOccurs="1">
          <field name="average_value" type="NX_FLOAT"/>
          <field name="average_value_error" type="NX_FLOAT"/>
          <field name="description" type="NX_CHAR"/>
          <field name="duration" type="NX_FLOAT"/>
          <field name="maximum_value" type="NX_FLOAT"/>
          <field name="minimum_value" type="NX_FLOAT"/>
          <field name="time" type="NX_FLOAT">
            <dimensions size="1">
              <dim index="1" value="nvalue"></dim>
            </dimensions>
          </field>
          <field name="value" type="NX_FLOAT">
            <dimensions size="1">
              <dim index="1" value="nvalue"></dim>
            </dimensions>
          </field>
        </group> 
        <group type="NXpositioner" minOccurs="0">
          <doc>
            Motor logs from cvinfo file.
          </doc>
          <field name="average_value" type="NX_FLOAT"/>
          <field name="average_value_error" type="NX_FLOAT"/>
          <field name="description" type="NX_CHAR"/>
          <field name="duration" type="NX_FLOAT"/>
          <field name="maximum_value" type="NX_FLOAT"/>
          <field name="minimum_value" type="NX_FLOAT"/>
          <field name="time" type="NX_FLOAT">
            <dimensions size="1">
              <dim index="1" value="numvalue"></dim>
            </dimensions>
          </field>
          <field name="value" type="NX_FLOAT">
            <dimensions size="1">
              <dim index="1" value="numvalue"></dim>
            </dimensions>
          </field>
        </group> 
      </group>
      <group type="NXnote" name="SNSHistoTool">
        <field name="SNSbanking_file_name" type="NX_CHAR"/>
        <field name="SNSmapping_file_name" type="NX_CHAR"/>
        <field name="author" type="NX_CHAR"/>
        <field name="command1" type="NX_CHAR">
          <doc>
            Command string for event2histo_nxl.
          </doc>  
        </field>
        <field name="date" type="NX_CHAR"/>
        <field name="description" type="NX_CHAR"/>
        <field name="version" type="NX_CHAR"/>     
      </group>    
      <group type="NXdata" minOccurs="1">
        <!-- for all NXdata/banks -->
        <link name="data" target="/NXentry/NXinstrument/NXdetector/data"></link>
        <link name="data_x_time_of_flight" target="/NXentry/NXinstrument/NXdetector/data_x_time_of_flight"></link>
        <link name="data_x_y" target="/NXentry/NXinstrument/NXdetector/data_x_y"></link>
        <link name="data_y_time_of_flight" target="/NXentry/NXinstrument/NXdetector/data_y_time_of_flight"></link>
        <link name="pixel_id" target="/NXentry/NXinstrument/NXdetector/pixel_id"></link>
        <link name="time_of_flight" target="/NXentry/NXinstrument/NXdetector/time_of_flight"></link>
        <link name="total_counts" target="/NXentry/NXinstrument/NXdetector/total_counts"></link>
        <link name="x_pixel_offset" target="/NXentry/NXinstrument/NXdetector/x_pixel_offset"></link>
        <link name="y_pixel_offset" target="/NXentry/NXinstrument/NXdetector/y_pixel_offset"></link>
      </group>
      <field name="collection_identifier" type="NX_CHAR"/>
      <field name="collection_title" type="NX_CHAR"/>
      <field name="definition" type="NX_CHAR">
        <doc>
          Official NXDL schema after this file goes to applications.
        </doc>
        <enumeration>
          <item value="NXsnshisto"></item>
        </enumeration>     
      </field>
      <field name="duration" type="NX_FLOAT" units="NX_TIME"/>
      <field name="end_time" type="NX_DATE_TIME"/>
      <field name="entry_identifier" type="NX_CHAR"/>
      <field name="experiment_identifier" type="NX_CHAR"/>
      <group type="NXinstrument" name="instrument">
        <group type="NXsource" name="SNS">
          <field name="frequency" type="NX_FLOAT" units="NX_FREQUENCY"/>
          <field name="name" type="NX_CHAR"/>
          <field name="probe" type="NX_CHAR"/>
          <field name="type" type="NX_CHAR"/>
        </group>
        <field name="SNSdetector_calibration_id" type="NX_CHAR">
          <doc>
            Detector calibration id from DAS.
          </doc>
        </field>
        <field name="SNSgeometry_file_name" type="NX_CHAR"/>       
        <!-- SNSnxtranslate -->
        <field name="SNStranslation_service" type="NX_CHAR"/>  
        <group type="NXdetector" minOccurs="1">
          <!-- for all NXdetector/banks -->
          <field name="azimuthal_angle" type="NX_FLOAT" units="NX_ANGLE">
            <dimensions size="2">
              <dim index="1" value="numx"></dim>
              <dim index="2" value="numy"></dim>
            </dimensions>
          </field> 
          <field name="data" type="NX_UINT" signal="1" axes="x_pixel_offset,y_pixel_offset,time_of_flight">
            <dimensions size="3">
              <dim index="1" value="numx"></dim>
              <dim index="2" value="numy"></dim>
              <dim index="3" value="numtof"></dim>
            </dimensions>
          </field> 
          <field name="data_x_time_of_flight" type="NX_UINT" signal="3" axes="x_pixel_offset,time_of_flight">
            <dimensions size="2">
              <dim index="1" value="numx"></dim>
              <dim index="2" value="numtof"></dim>
            </dimensions>
          </field> 
          <field name="data_x_y" type="NX_UINT" signal="2" axes="x_pixel_offset,y_pixel_offset">
            <dimensions size="2">
              <dim index="1" value="numx"></dim>
              <dim index="2" value="numy"></dim>
            </dimensions>
          </field> 
          <field name="data_y_time_of_flight" type="NX_UINT" signal="4" axes="y_pixel_offset,time_of_flight">
            <dimensions size="2">
              <dim index="1" value="numy"></dim>
              <dim index="2" value="numtof"></dim>
            </dimensions>
          </field> 
          <field name="distance" type="NX_FLOAT" units="NX_LENGTH">
            <dimensions size="2">
              <dim index="1" value="numx"></dim>
              <dim index="2" value="numy"></dim>
            </dimensions>
          </field>
          <group type="NXgeometry" name="origin">
            <group type="NXorientation" name="orientation">
              <field name="value" type="NX_FLOAT">
                <doc>
                  Six out of nine rotation parameters.
                </doc>
                <dimensions size="1">
                  <dim index="1" value="6"></dim>
                </dimensions>
              </field>
            </group>
            <group type="NXshape" name="shape">
              <field name="description" type="NX_CHAR"/>
              <field name="shape" type="NX_CHAR"/>
              <field name="size" type="NX_FLOAT" units="NX_LENGTH">
                <dimensions size="1">
                  <dim index="1" value="3"></dim>
                </dimensions>
              </field>
            </group>
            <group type="NXtranslation" name="translation">
              <field name="distance" type="NX_FLOAT" units="NX_LENGTH">
                <dimensions size="1">
                  <dim index="1" value="3"></dim>
                </dimensions>
              </field>
            </group>
          </group>
          <field name="pixel_id" type="NX_UINT">
            <dimensions size="2">
              <dim index="1" value="numx"></dim>
              <dim index="2" value="numy"></dim>
            </dimensions>
          </field> 
          <field name="polar_angle" type="NX_FLOAT" units="NX_ANGLE">
            <dimensions size="2">
              <dim index="1" value="numx"></dim>
              <dim index="2" value="numy"></dim>
            </dimensions>
          </field> 
          <field name="time_of_flight" type="NX_FLOAT" axis="3" primary="1" units="NX_TIME_OF_FLIGHT">
            <dimensions size="1">
              <dim index="1" value="numtof + 1"></dim>
            </dimensions>
          </field> 
          <field name="total_counts" type="NX_UINT"/> 
          <field name="x_pixel_offset" type="NX_FLOAT" axis="1" primary="1" units="NX_LENGTH">
            <dimensions size="1">
              <dim index="1" value="numx"></dim>
            </dimensions>
          </field> 
          <field name="y_pixel_offset" type="NX_FLOAT" axis="2" primary="1" units="NX_LENGTH">
            <dimensions size="1">
              <dim index="1" value="numy"></dim>
            </dimensions>        
          </field> 
        </group>       
        <field name="beamline" type="NX_CHAR"/>      
        <group type="NXchopper" minOccurs="0">
          <field name="distance" type="NX_FLOAT" units="NX_LENGTH"/>
        </group>   
        <group type="NXmoderator" name="moderator">
          <field name="coupling_material" type="NX_CHAR"/>
          <field name="distance" type="NX_FLOAT" units="NX_LENGTH"/>
          <field name="temperature" type="NX_FLOAT" units="NX_TEMPERATURE"/>
          <field name="type" type="NX_CHAR"/>
        </group>  
        <field name="name" type="NX_CHAR"/>  
        <group type="NXaperture" minOccurs="0">
          <group type="NXgeometry" name="origin">
            <group type="NXorientation" name="orientation">
              <field name="value" type="NX_FLOAT">
                <doc>
                  Six out of nine rotation parameters.
                </doc>
                <dimensions size="1">
                  <dim index="1" value="6"></dim>
                </dimensions>
              </field>
            </group>
            <group type="NXshape" name="shape">
              <field name="description" type="NX_CHAR"/>
              <field name="shape" type="NX_CHAR"/>
              <field name="size" type="NX_FLOAT" units="NX_LENGTH">
                <dimensions size="1">
                  <dim index="1" value="3"></dim>
                </dimensions>
              </field>
            </group>
            <group type="NXtranslation" name="translation">
              <field name="distance" type="NX_FLOAT" units="NX_LENGTH">
                <dimensions size="1">
                  <dim index="1" value="3"></dim>
                </dimensions>
              </field>
            </group>
          </group>
          <field name="x_pixel_offset" type="NX_FLOAT" units="NX_LENGTH">
          </field>
        </group>
        <group type="NXattenuator" minOccurs="0">
          <field name="distance" type="NX_FLOAT" units="NX_LENGTH"/>
          <!-- motor links from DASlogs when exist -->
        </group>
        <group type="NXpolarizer" minOccurs="0"/>
        <!-- motor links from DASlogs when exist -->
        <group type="NXcrystal" minOccurs="0">
          <group type="NXgeometry" name="origin">
            <field name="description" type="NX_CHAR"/>
            <group type="NXorientation" name="orientation">
              <field name="value" type="NX_FLOAT">
                <doc>
                  Six out of nine rotation parameters.
                </doc>
                <dimensions size="1">
                  <dim index="1" value="6"></dim>
                </dimensions>
              </field>
            </group>
            <group type="NXshape" name="shape">
              <field name="description" type="NX_CHAR"/>
              <field name="shape" type="NX_CHAR"/>
              <field name="size" type="NX_FLOAT" units="NX_LENGTH">
              </field>
            </group>
            <group type="NXtranslation" name="translation">
              <field name="distance" type="NX_FLOAT" units="NX_LENGTH">
                <dimensions size="1">
                  <dim index="1" value="3"></dim>
                </dimensions>
              </field>
            </group>
          </group>
          <field name="type" type="NX_CHAR"/>
          <field name="wavelength" type="NX_FLOAT32" units="NX_WAVELENGTH"/>
        </group>
      </group>
      <group type="NXmonitor" minOccurs="0">
        <field name="data" type="NX_UINT" signal="1" axes="time_of_flight">
          <dimensions size="1">
            <dim index="1" value="numtimechannels"></dim>
          </dimensions>
        </field>  
        <field name="distance" type="NX_FLOAT" units="NX_LENGTH"/>  
        <field name="mode" type="NX_CHAR"/>  
        <field name="time_of_flight" type="NX_FLOAT" units="NX_TIME">
          <dimensions size="1">
            <dim index="1" value="numtimechannels + 1"></dim>
          </dimensions>   
        </field>      
      </group>
      <field name="notes" type="NX_CHAR"/>   
      <field name="proton_charge" type="NX_CHARGE"/>
      <field name="raw_frames" type="NX_INT"/>
      <field name="run_number" type="NX_CHAR"/>
      <group type="NXsample" name="sample">
        <field name="changer_position" type="NX_CHAR"/>
        <field name="holder" type="NX_CHAR"/>
        <field name="identifier" type="NX_CHAR"/>
        <field name="name" type="NX_CHAR">
          <doc>Descriptive name of sample</doc>
        </field>   
        <field name="nature" type="NX_CHAR"/>
      </group>  
      <field name="start_time" type="NX_DATE_TIME"/>
      <field name="title" type="NX_CHAR"/>
      <field name="total_counts" type="NX_UINT"/>
      <field name="total_uncounted_counts" type="NX_UINT"/>
      <group type="NXuser">
        <field name="facility_user_id" type="NX_CHAR"/>
        <field name="name" type="NX_CHAR"/>
        <field name="role" type="NX_CHAR"/>
      </group>     
    </group>
</definition>
